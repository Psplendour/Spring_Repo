<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="student1" class="com.pk.model.Student">
		<property name="name" value="Sunil"></property>
		<property name="marks" value="60"></property>
	</bean>
	<bean id="student2" class="com.pk.model.Student">
		<property name="name" value="Anil"></property>
		<property name="marks" value="20"></property>
	</bean>
	<bean id="student3" class="com.pk.model.Student">
		<property name="name" value="Mukesh"></property>
		<property name="marks" value="60"></property>
	</bean>
	<bean id="student4" class="com.pk.model.Student">
		<property name="name" value="Dinesh"></property>
		<property name="marks" value="26"></property>
	</bean>

	<bean id="studentList" class="java.util.ArrayList">
		<constructor-arg>
			<list>
				<ref bean="student1" />
				<ref bean="student2" />
				<ref bean="student3" />
				<ref bean="student4" />
			</list>
		</constructor-arg>
	</bean>

	<bean id="studentListAccessor" class="com.pk.model.StudentListAccessor">
		<property name="thirdStudentInList" value="#{studentList[2]}"></property>
		<property name="failedStudent" value="#{studentList.?[marks lt 40]}"></property>
		<property name="studentName" value="#{studentList.![name]}"></property>
	</bean>
</beans>